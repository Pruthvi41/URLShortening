<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Link Shortener</title>
</head>
<body>
  <div class="container">
    <h1>Url Shortener</h1>
    <form action="/urls" method="POST" class="my-4 form-inline">
      <input required placeholder="URL" type="url" name="regularUrl" id="regularUrl" class="form-control">
      <button class="btn btn-success" type="submit">ShortURL</button>
    </form>
    
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Regular URL</th>
          <th>Shortened URL</th>    
        </tr>
      </thead>
      <tbody>
        <% urls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.regular %>"><%= shortUrl.regular %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>